pipeline {
    environment {
        registry = "housewrecker/gaps"
        registryCredential = 'dockerhub'
    }

    agent none
    stages {
        stage('Java Build') {
            agent {
                docker {
                    image 'adoptopenjdk/maven-openjdk8'
                    args '-v /root/.m2:/root/.m2'
                }
            }
            steps {
                sh 'mvn -B -DskipTests clean package'
                sh 'mvn test'
            }
            post {
                always {
                    junit 'GapsWeb/target/surefire-reports/*.xml'
                }
            }
        }
        stage('Building image') {
            agent {
                dockerfile {
                  filename "Dockerfile.ssl"
                }
              }
            steps{
                script {
                    docker.build registry + ":v0.2.3.$BUILD_NUMBER"
                }
            }
        }
    }
}