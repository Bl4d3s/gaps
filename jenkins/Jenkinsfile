pipeline {
    agent {
        docker {
            image 'openjdk8'
        }
    }
    stages {
        stage('Install Maven') {
            steps {
                sh 'RUN apt-get install -y maven'
            }
        }
        stage('Java Build') {
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Junit Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'GapsWeb/target/surefire-reports/*.xml'
                }
            }
        }
        stage('Install Node') {
            steps {
                sh 'RUN apt-get install -y curl \
                      && curl -sL https://deb.nodesource.com/setup_9.x | bash - \
                      && apt-get install -y nodejs npm \
                      && curl -L https://www.npmjs.com/install.sh | sh'
                sh 'npm ci'
            }
        }
    }
}