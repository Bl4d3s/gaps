environment {
    registry = "housewrecker/gaps"
    registryCredential = 'dockerhub'
}
pipeline {
    agent none
    stages {
        stage('Java Build') {
            agent {
                docker {
                    image 'adoptopenjdk/maven-openjdk8'
                    args '-v /root/.m2:/root/.m2'
                }
            }
            steps {
                sh 'mvn -B -DskipTests clean package'
                sh 'mvn test'
            }
            post {
                always {
                    junit 'GapsWeb/target/surefire-reports/*.xml'
                }
            }
        }
        stage('Building image') {
            agent {
                dockerfile {
                    filename "Dockerfile.ssl"
                    args  " --entrypoint='' "
                }
            }
            steps {
                sh "echo 'done building'"
            }
        }
        stage('npm install') {
            agent {
                docker {
                    image 'node:6-alpine'
                    args '-p 3000:3000'
                }
            }
            steps {
                sh 'npm install'
            }
        }
    }
}